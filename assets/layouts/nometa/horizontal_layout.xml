<!--NO METADATA VERSION-->
<theme>
	<formatVersion>4</formatVersion>
	<view name="detailed, video">

		<image name="filter" extra="true">
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./../../assets/gamelist_overlay.png</path>
			<zIndex>1</zIndex>
		</image>
		
		<image name="logo">
			<pos>1 1</pos>
			<color>00000000</color>
			<size>0.01 0.01</size>
			<path>./../../assets/box.png</path>
			<zIndex>1</zIndex>
		</image>
		
		<image name="background" extra="true">
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./../../assets/bg.png</path>
			<zIndex>0</zIndex>
		</image>
		
		<image name="md_image">
			<origin>0 0</origin>
			<pos>0.160 0.124</pos>
			<maxSize>0.273 0.471</maxSize>
		</image>
		
		<text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate">
			<pos>1 1</pos>
		</text>
		
		<datetime name="md_releasedate">
				<pos>1 1</pos>
				<size>0.01 0.01</size>
				<color>ffffff</color>
				<fontSize>0.017</fontSize>
				<fontPath>./../../assets/SST.ttf</fontPath>
		</datetime>
		
		<rating name="md_rating">
			<pos>1 1</pos>
			<size>0.01 0.01</size>
			<filledPath>./../../assets/rating_filled.svg</filledPath>
			<unfilledPath>./../../assets/rating_unfilled.svg</unfilledPath>
			<zIndex>40</zIndex>
		</rating>
		
		<text name="md_developer, md_players, md_description, md_lbl_players, md_players">
			<fontSize>0.01</fontSize>
			<pos>1 1</pos>
			<size>0.01 0.01</size>
			<fontPath>./../../assets/SST.ttf</fontPath>
			<color>ffffff</color>
			<forceUppercase>0</forceUppercase>
			<zIndex>2</zIndex>
		</text>
		
		<text name="system_name" extra="true">
			<text>${system.fullName}</text>
			<forceUppercase>0</forceUppercase>
			<size>0.5 0.025</size>
			<pos>0.02 0.037</pos>
			<color>ffffff</color>
			<fontPath>./../../assets/SST.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<zIndex>2</zIndex>
		</text>
		
		<video name="md_video">
				<pos>1 1</pos>
				<maxSize>0.273 0.471</maxSize>
				<origin>0 0</origin>			
				<delay>0</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>1 1</pos>
				<origin>0 0</origin>
				<maxSize>0.39 0.23</maxSize>
			</image>
		
	</view>
</theme>	
	
