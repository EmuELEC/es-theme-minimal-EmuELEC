		<image name="logo">
			<origin>0.5 0.5</origin>
			<pos>0.11 0.12</pos>
			<maxSize>0.20 0.13</maxSize>
		</image>

		<imagegrid name="gamegrid">
			<pos>0.26 0.12</pos>
			<size>0.75 0.78</size>
			<margin>0 0</margin>
		</imagegrid>

		<gridtile name="default">
			<size>0.15 0.20</size>
			<backgroundCornerSize>0.01 0.01</backgroundCornerSize>
			<backgroundImage>./../assets/bg.png</backgroundImage>
			<backgroundColor>42424200</backgroundColor>
		</gridtile>

		<gridtile name="selected">
			<size>0.20 0.25</size>
